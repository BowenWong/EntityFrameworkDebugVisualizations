<UserControl x:Class="EntityFramework.Debug.DebugVisualization.Views.Controls.MiniMapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.GroupBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <GroupBox Padding="0" Header="Mini-Map" Style="{StaticResource MetroGroupBox}">
        <Grid Background="#FFFCFCFC" Margin="1" ClipToBounds="True">
            <Grid Margin="0" x:Name="MiniMapContent">
                <Grid.Background>
                    <VisualBrush
                        Visual="{Binding ContentVisual, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Stretch="Uniform" />
                </Grid.Background>

                <Rectangle x:Name="VisibleAreaIndicator" Stroke="#83919F" Margin="0" Fill="#44F5F5F5" />
            </Grid>
        </Grid>
    </GroupBox>
</UserControl>