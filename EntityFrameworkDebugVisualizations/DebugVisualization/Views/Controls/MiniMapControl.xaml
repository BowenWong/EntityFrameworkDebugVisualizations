<UserControl x:Class="EntityFramework.Debug.DebugVisualization.Views.Controls.MiniMapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.GroupBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <GroupBox Padding="0" Header="Mini-Map" Style="{StaticResource MetroGroupBox}">
        <Grid Background="#FFFCFCFC">
            <Grid>
                <Grid.Background>
                    <VisualBrush
                        Visual="{Binding ContentVisual, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Stretch="Uniform" />
                </Grid.Background>

                <Rectangle x:Name="Viewport" Stroke="Red" />
            </Grid>
        </Grid>
    </GroupBox>
</UserControl>